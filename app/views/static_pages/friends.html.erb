<% provide(:title, 'Friends') %>

<div class="container-fluid py-5 bg-dark hero-header mb-5">
  <div class="container text-center my-5 pt-5 pb-4">
    <h1 class="display-3 text-white mb-3">Friends</h1>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb justify-content-center text-uppercase">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item text-white active" aria-current="page">Friends</li>
      </ol>
    </nav>
  </div>
</div>



<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
  <div class="container">
    <div class="text-center">
      <h5 class="section-title ff-secondary text-center text-primary fw-normal">Friends' posts</h5>
      <h1 class="mb-5">Check what's going on with your friends</h1>
    </div>


    <% if logged_in? %>
      <div class="container px-5 my-5 px-5">
        <div class="row gx-5 justify-content-center">
          <div class="col-lg-12">
            <div class="d-flex">
              <div class="flex-shrink-0">
                <%= render 'shared/user_info' %>
                <%= render 'shared/stats' %>
                <%= render 'shared/micropost_form' %>
              </div>
              <div class="col-xxl">
                <%= render 'shared/feed_microposts' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% else %>
    <% end %>
  </div>
</div>
