<div class="col-md-6 bg-dark d-flex align-items-center text-center">
  <div class="p-5">
    <h5 class="section-title ff-secondary text-primary fw-normal">Already member?</h5>
    <h1 class="text-white mb-4">Sign in</h1>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <div class="row g-3">
        <div class="col-12">
          <div class="form-floating">
            <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
            <%= f.label :email %>
          </div>
        </div>
        <div class="col-12">
          <div class="form-floating">
            <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
            <%= f.label :password %>
          </div>
        </div>
        <div class="col-12">
          <%= f.submit "Login", class: "btn btn-primary w-100 py-3" %>
        </div>
        <div class="col-12">
          <%= f.check_box :remember_me %>
          <h7 class="text-white mb-4">Remember me on this computer</h7>
        </div>
      </div>
    <% end %>
  </div>
</div>