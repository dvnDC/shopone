<div class="container px-5 my-5 px-5">
  <div class="row gx-5 justify-content-center">
    <div class="col-lg-12">
      <div class="card mb-4">
        <div class="card-body p-4">
          <div class="d-flex">
            <div class="flex-shrink-0"><i class="bi bi-chat-right-quote-fill text-primary fs-1"></i></div>
            <div class="ms-4">
              <p class="mb-1"><%= micropost.content %></p>
              <%= image_tag micropost.display_image if micropost.image.attached? %>
              <div class="small text-muted">- <%= link_to micropost.user.name, micropost.user, class: "small text-muted" %>
                <% if current_user?(micropost.user) %>
                  <%= link_to "delete", micropost, class: "small text-muted", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
                <% end %>
                <p class="mb-1">
                  Posted <%= time_ago_in_words(micropost.created_at) %> ago.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>