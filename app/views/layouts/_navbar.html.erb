<div class="container-xxl position-relative p-0">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
    <a href="" class="navbar-brand p-0">
      <h1 class="text-primary m-0">
        <i class="fa fa-gem"></i>
        Shopone
      </h1>
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
      <span class="fa fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <div class="navbar-nav ms-auto py-0 pe-4">
        <%= link_to "Home", root_path, class: "nav-item nav-link active" %>
        <%= link_to "Offers", items_path, class: "nav-item nav-link" %>
        <%= link_to "Help", help_path, class: "nav-item nav-link" %>
        <%= link_to "Contact", contact_path, class: "nav-item nav-link" %>
        <% if logged_in? %>
          <div class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Profile</a>
            <div class="dropdown-menu m-0">
              <%= link_to "Profile", current_user, class: "dropdown-item" %>
              <%= link_to "Settings", edit_user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Friends", friends_path, class: "dropdown-item" %>
              <%= link_to "Sign out", logout_path, method: "delete", class: "dropdown-item" %>
            </div>
          </div>
        <% end %>
      </div>
      <%= link_to "Sign up", signup_path, class: "btn btn-primary py-2 px-4" unless logged_in? %>
      <form class="d-flex">
        <button class="btn btn-outline-warning" type="submit">
          <i class="bi-cart-fill me-1"></i>
          Cart
          <span class="badge bg-warning text-black ms-1 rounded-pill">0</span>
        </button>
      </form>
    </div>
  </nav>
</div>