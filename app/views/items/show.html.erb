<%# provide(:title, @item.name) %>
<p><%= @item.name %></p>
<p><%= @item.content %></p>
<p><%= @item.price %> PLN</p>
<p><%= link_to image_tag(@item.display_image, width: "100") %></p>
<p><%= link_to "Back", items_path, class: "btn btn-info" %></p>


<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>

    <section class="micropost_form">
      <%= render 'comments/comment_form' %>
    </section>
  </aside>
</div>