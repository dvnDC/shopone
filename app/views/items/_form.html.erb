<%= form_with(model: @item, local: true) do |f| %>
  <%#= render 'shared/error_messages', object: f.object %>
  <div class="row g-3">
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :name, class: 'form-control', placeholder: "" %>
        <%= f.label :name %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.collection_select :subcategory_id, Subcategory.order(:id), :id, :name%>
          <%= f.label :subcategory_id %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :price, class: 'form-control', placeholder: "" %>
        <%= f.label :price %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-floating">
        <%= f.text_field :content, class: 'form-control', placeholder: "" %>
        <%= f.label :content %>
      </div>
    </div>
    <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
    $("#item_image").bind("change", function () {
        const size_in_megabytes = this.files[0].size / 1024 / 1024;
        if (size_in_megabytes > 15) {
            alert("Maximum file size is 15MB. Please choose a smaller file.");
            $("#item_image").val("");
        }
    });
</script>